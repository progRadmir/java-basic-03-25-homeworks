CREATE TABLE public.test (
test_id integer NOT NULL,
test_name text NOT NULL,
CONSTRAINT test_pkey PRIMARY KEY(test_id)
);

CREATE TABLE public.question (
test_id integer NOT NULL,
question_number integer NOT NULL,
question_text text NOT NULL,
CONSTRAINT question_pkey PRIMARY KEY(question_number),
CONSTRAINT question_fkey FOREIGN KEY (test_id) REFERENCES public.tests (id)
);

CREATE TABLE public.answer (
question_number integer NOT NULL,
answer_text text NOT NULL,
is_correct boolean NOT NULL,
CONSTRAINT answer_fkey FOREIGN KEY (question_number) REFERENCES public.questions (question_number)
);
